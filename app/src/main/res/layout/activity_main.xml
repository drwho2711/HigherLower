<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhonore.higherlower.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/guessText"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Enter Guess"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="-177dp" />

        <Button
            android:id="@+id/buttonGuess"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:onClick="getGuessNumber"
            android:text="Guess"
            android:visibility="visible"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="426dp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/guessText"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/guessText"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="53dp"
            android:layout_marginStart="29dp"
            android:text="Enter guess below:"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:layout_marginStart="42dp"
            android:text="Guess a number between 1 and 20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
